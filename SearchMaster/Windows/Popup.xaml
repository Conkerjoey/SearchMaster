<Window x:Class="SearchMaster.Popup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SearchMaster"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Popup" Height="131" Width="275">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="10,10,10,10" TextWrapping="Wrap" VerticalAlignment="Top" Text="{Binding Path=Message, FallbackValue='An error occured.'}" FontSize="14" TextAlignment="Justify" />
        <Button x:Name="buttonOK" Content="OK" HorizontalAlignment="Left" Margin="45,0,0,10" VerticalAlignment="Bottom" Width="75" Click="buttonOK_Click" IsDefault="True" />
        <Button x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,45,10" VerticalAlignment="Bottom" Width="75" Click="buttonCancel_Click" />
    </Grid>
</Window>
